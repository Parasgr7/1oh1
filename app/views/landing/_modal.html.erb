<div class="modal fade" tabindex="-1" role="dialog" id="authDialog">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <button
                style="right: 25px;"
                type="button"
                class="close position-absolute"
                data-dismiss="modal"
                aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body p-0">
        <%= form_tag user_session_path,:format=> "js",remote: true, method: :post,id: "sign-in-form"  do |f| %>
          <div class="auth-pages" id="modal_sign_in_email">
            <%= render 'landing/modal_signin_email', f: f%>
          </div>

          <div class="auth-pages d-none" id="modal_sign_in_password">
            <%= render 'landing/modal_signin_password', f: f%>
          </div>
        <% end %>

        <%= form_for(resource, as: resource_name, url: "/users/password",:html => {:id => "reset-password-form"}) do |f| %>
          <div class="auth-pages d-none" id="modal_sign_in_forgot_password">
            <%= render 'landing/modal_signin_forgot_password', f: f%>
          </div>
        <% end %>

        <div id="new_user">
          <%= form_tag user_registration_path, remote:true,:method => :post do |f| %>
            <div class="auth-pages d-none" id="modal_signup">
              <%= render 'landing/modal_signup', f: f%>
            </div>
          <% end %>
        </div>

        <div class="auth-pages d-none" id="modal_signedup">
          <%= render 'landing/modal_waiting_for_verification' %>
        </div>
      </div>
    </div>
  </div>
</div>

 <%= render 'landing/terms'%>
<%= render 'landing/privacy'%>
