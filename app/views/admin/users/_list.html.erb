<div class="site-section block-13 border-bottom" id="section-explorers">

  <div class="container" style="margin-top: 25px">
    <div class="text-left pb-1 mb-4">
      <h2 class="text-secondary">Registered Users</h2>
    </div>

    <div class="table-responsive">
      <%= page_entries_info @users %>
      <table class="table table-striped">
        <thead>
          <tr>
            <th scope="col">#</th>
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Location</th>
            <th scope="col">Bio</th>
            <th scope="col">View Profile</th>
          </tr>
        </thead>
        <tbody>
          <% @users.each do|user|%>
            <tr>
              <th scope="row"><%= user.id %></th>
              <td><%= user.full_name %></td>
              <td><%= user.email %></td>
              <td><%= user.profile.nil? ? "": user.profile.country %>, <%=user.profile.nil? ? "": user.profile.state%>, <%=user.profile.nil? ? "": user.profile.city %></td>
              <td><%= user.profile.nil? ? "": user.profile.bio %></td>
              <td><%=link_to "View Profile", user.profile.nil? ? "": profile_path(user.profile)  %></td>
            </tr>
          <% end %>

        </tbody>
      </table>
      <%= will_paginate @users%>

    </div>
  </div>

</div>
