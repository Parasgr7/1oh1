<div class="modal fade" id="modalChat" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel" aria-hidden="true">
    <div class="modal-dialog modal-dialog-centered" id="sizePreLate" role="document" id="category">
      <div  class="modal-content">
        <%= form_tag( running_late_path(@booking), :method => :put,remote: true ,:id => 'running_late' ) do |f| %>
          <div class="modal-body gridModalChat">
              <div class="chatProfile">
                  <div class="">
                      <img class="imgChat" src="<%= profile_photo(@companion.profile)  %> ">
                  </div>
                  <div class="nameTo">
                    <span class="nameProfileChat"> To: <%=@companion.full_name%></span>
                  </div>
                  <div class="celverde text-right">
                    <button type="button"
                            style="margin-top: 10px" 
                            class="close" data-dismiss="modal" aria-label="Close">
                      <span class="closeChat" aria-hidden="true">&times;</span>
                    </button>
                  </div>
              </div>
              <div class="celverde textareaChat form-group">
                <textarea class="form-control" name="message" rows="3">sorry, I am running late!</textarea>
              </div>
              <div class=" celverde gridbtnChat">
                 <div class=""></div>
                 <div class="btnCancelChat text-right">
                      <button type="button" data-dismiss="modal" class="btn btn-link">Cancel</button>
                 </div>
                 <div class="btnSendChat text-right">
                      <%= submit_tag("Send",:id=>"submit_running_late", :class=>'btn btn-success',data: { disable_with: "Sending..." })%>
                 </div>
              </div>
          </div>
        <%end%>

      </div>
    </div>
  </div>
