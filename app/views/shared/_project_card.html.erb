<div class="col-12 col-md-6 col-lg-4 mb-4 mw-mc <%=class_name%>">
<% if profile_builder != true %>
	<%= link_to project_path(project.id) do%>
	<div class="user-card shadow" id="project-card" data-id ="<%=project.id%>">
		<div class="user-card-image"
			 style="background-image: url('<%= project_photo(project) %>');">
			 <% if project.help && !project.help_needed.nil? %>
				 <div class="project-card-help-requested border">
					 Help requested
				 </div>
			 <%end%>
			 </div>
		<div class="p-3">
			<div class="category-card-title px-0 mt-0">
				<%= project.name %>
			</div>
			<div class="project-card-description overflow-ellipsis">
						<%= !project.description.nil? ? project.description.truncate(90): ''%>
			</div>
			<div class="user-card-location font-weight-bold mt-2">
				By <%= project.profile.user.full_name %>
			</div>
			<div class="mt-2">
				<!-- project status progress -->
				<div class="row m-0">
					<%if project.status=="idea"%>
						<!-- idea -->
						<div class="col-auto px-0">
							<div class="project-progress-circle small"
								 style="background-image: url('<%= image_path('Icons/Idea_icon.png') %>');">
							</div>
						</div>
						<div class="col px-0">
							<div class="project-progress-line">

							</div>
						</div>
						<div class="col-auto px-0">
							<div class="project-progress-circle small">
							</div>
						</div>
						<div class="col px-0">
							<div class="project-progress-line">
							</div>
						</div>
						<div class="col-auto px-0">
							<div class="project-progress-circle small">
							</div>
						</div>
					<%elsif project.status == "progress"%>
						<!-- progress -->
						<div class="col-auto px-0">
							<div class="project-progress-circle small active"
								 >
							</div>
						</div>
						<div class="col px-0">
							<div class="project-progress-line active">
							</div>
						</div>
						<div class="col-auto px-0">
							<div class="project-progress-circle small"
								 style="background-image: url('<%= image_path('Icons/project_status.png') %>');">
							</div>
						</div>
						<div class="col px-0">
							<div class="project-progress-line">
							</div>
						</div>
						<div class="col-auto px-0">
							<div class="project-progress-circle small">
							</div>
						</div>
					<%elsif project.status == "completed"%>
						<div class="col-auto px-0">
							<div class="project-progress-circle small active"
								 >
							</div>
						</div>
						<div class="col px-0">
							<div class="project-progress-line active">
							</div>
						</div>
						<div class="col-auto px-0">
							<div class="project-progress-circle small active">
							</div>
						</div>
						<div class="col px-0">
							<div class="project-progress-line active">
							</div>
						</div>
						<div class="col-auto px-0">
							<div class="project-progress-circle small"
								 style="background-image: url('<%= image_path('Icons/completed-icon.png') %>');">
							</div>
						</div>
					<%end%>
				</div>
			</div>
			<div class="project-card-small-info mt-2">

			</div>
			<div class="project-card-small-info">
				<%=project.colab_id.nil? ? "":project.colab_id.size %> Collaborators
			</div>
			<div class="project-card-small-info">
				<%= project.profile.state %>, <%= project.profile.country %>
			</div>

			<div class="mt-3">
				<% project.categories.each do |category|%>
					<div class="project-card-tag border"><%=category.name%></div>
				<% end %>
			</div>
		</div>
		</div>
	<%end%>

<% else %>
<div class="user-card shadow" id="project-card" data-id ="<%=project.id%>">
	<div class="user-card-image"
		 style="background-image: url('<%= image_path('Section/workshop.jpg') %>');">
		 <% if project.help && !project.help_needed.nil? %>
			 <div class="project-card-help-requested border">
				 Help requested
			 </div>
		 <%end%>
		 </div>
	<div class="p-3">
		<div class="category-card-title px-0 mt-0 position-relative">
			<%= project.name %>

			<% if profile_builder %>
				<span class="position-absolute" style="right: 5px; top: 11px">
					<%= link_to edit_project_builder_path(id: project), remote: true do%>
					 <i class="material-icons c-dark-gray fsz-20"  style="display:block">create</i>
					<%end%>
				</span>
				<span class="position-absolute" style="right: 35px; top: 2px">
					<%= link_to project_path(id: project.id), method: :delete, remote: true do%>
						<i class="material-icons c-dark-gray fsz-20">
							 delete
						 </i>
					 <%end%>
				</span>
			<%end%>
		</div>
		<div class="project-card-description overflow-ellipsis">
					<%= !project.description.nil? ? project.description.truncate(90): ''%>
		</div>
		<div class="user-card-location font-weight-bold mt-2">
			By <%= project.profile.user.full_name %>
		</div>
		<div class="mt-2">
			<!-- project status progress -->
			<div class="row m-0">
				<%if project.status=="idea"%>
					<!-- idea -->
					<div class="col-auto px-0">
						<div class="project-progress-circle small"
							 style="background-image: url('<%= image_path('Icons/Idea_icon.png') %>');">
						</div>
					</div>
					<div class="col px-0">
						<div class="project-progress-line">

						</div>
					</div>
					<div class="col-auto px-0">
						<div class="project-progress-circle small">
						</div>
					</div>
					<div class="col px-0">
						<div class="project-progress-line">
						</div>
					</div>
					<div class="col-auto px-0">
						<div class="project-progress-circle small">
						</div>
					</div>
				<%elsif project.status == "progress"%>
					<!-- progress -->
					<div class="col-auto px-0">
						<div class="project-progress-circle small active"
							 >
						</div>
					</div>
					<div class="col px-0">
						<div class="project-progress-line active">
						</div>
					</div>
					<div class="col-auto px-0">
						<div class="project-progress-circle small"
							 style="background-image: url('<%= image_path('Icons/project_status.png') %>');">
						</div>
					</div>
					<div class="col px-0">
						<div class="project-progress-line">
						</div>
					</div>
					<div class="col-auto px-0">
						<div class="project-progress-circle small">
						</div>
					</div>
				<%elsif project.status == "completed"%>
					<div class="col-auto px-0">
						<div class="project-progress-circle small active"
							 >
						</div>
					</div>
					<div class="col px-0">
						<div class="project-progress-line active">
						</div>
					</div>
					<div class="col-auto px-0">
						<div class="project-progress-circle small active">
						</div>
					</div>
					<div class="col px-0">
						<div class="project-progress-line active">
						</div>
					</div>
					<div class="col-auto px-0">
						<div class="project-progress-circle small"
							 style="background-image: url('<%= image_path('Icons/completed-icon.png') %>');">
						</div>
					</div>
				<%end%>
			</div>
		</div>
		<div class="project-card-small-info mt-2">

		</div>
		<div class="project-card-small-info">
			<%=project.colab_id.nil? ? "":project.colab_id.size %> Collaborators
		</div>
		<div class="project-card-small-info">
			<%= project.profile.state %>, <%= project.profile.country %>
		</div>

		<div class="mt-3">
			<% project.categories.each do |category|%>
				<div class="project-card-tag border"><%=category.name%></div>
			<% end %>
		</div>
	</div>
	</div>
<% end %>

</div>
