<%= form_for(market) do |f| %>
  	<div class="form-row">
  		<div class="form-group col-md-6 custom-from-group">
  		  <label for="first-name">Name</label>
  		  <input type="text" class="form-control" name="name" placeholder="Name" value= "<%=market.name%>">
  		</div>
  		<div class="form-group col-md-6 custom-from-group">
  		  <label for="currency">Currency</label>
  		  <input type="text" class="form-control" name="currency" placeholder="Currency" value= "<%=market.currency%>">
  		</div>
  	</div>
    <div class="form-row">
  		<div class="form-group col-md-6 custom-from-group">
  		  <label for="mode">Mode</label>
        <% type = ["Payment","Subscription"]%>
        <select id="mode_payment" name="mode">
          <% type.each do |mode|%>
            <option value="<%=mode%>" <%= market.mode == mode ? 'selected' : ''%>>
              <%=mode%>
            </option>
          <%end%>
        </select>

  		</div>
  		<div class="form-group col-md-6 custom-from-group">
  		  <label for="last-name">Interval</label>
  		  <input type="text" class="form-control" name="interval" placeholder="Interval" value= "<%=market.interval%>">
  		</div>
  	</div>

    <div class="form-row">
  		<div class="form-group col-md-4 custom-from-group">
  		  <label for="mode">Price</label>
  		  <input type="text" class="form-control" name="price" placeholder="Price" value= "<%=market.price%>">
  		</div>
  		<div class="form-group col-md-4 custom-from-group">
  		  <label for="last-name">Offer</label>
  		  <input type="text" class="form-control" name="offer" placeholder="Offer" value= "<%=market.offer%>">
  		</div>
      <div class="form-group col-md-4 custom-from-group">
  		  <label for="last-name">Order</label>
  		  <input type="number" class="form-control" name="order" placeholder="Order number" value= "<%=market.order%>">
  		</div>
  	</div>

  	<div class="form-row">
  		<div class="form-group custom-from-group w-100">
  		    <label for="about">Description</label>
  		    <textarea class="form-control" placeholder="Describe Product" name="description" rows="3"><%=market.description%></textarea>
  		</div>
  	</div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
