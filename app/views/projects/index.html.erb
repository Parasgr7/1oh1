<div class="navbar-without-banner">
    <%= render 'landing/navbar' %>
</div>

<div style="margin-top: 120px;">
  <%= render 'shared/search_form'%>
</div>


<section class="container projects-container">
  <div class="row border-bottom pb-5 mt-5">
    <div class="col">
      <h3>Find a project</h3>
      <p>Search projects of all types in and in all stages from all over the world.</p>
    </div>
    <div class="col">
      <h3>Work together</h3>
      <p>Connect, communicate and collaborate. Leverage the vast skills of users to shorten timeline and increase innovation.</p>
    </div>
    <div class="col">
      <h3>Limitless build</h3>
      <p>Access to user skills lets you build products, relationships and new skills, You're now only limited by you vison.</p>
    </div>
  </div>

  <%= render partial:'filter_results',locals:{projects:nil}%>
  <div id="popular_results">
    <% if request.parameters[:search] %>
      <%= render partial:'shared/search_results',locals:{results: @results}%>
    <%else%>
      <%= render partial:'popular_projects',locals:{popular_projects: @popular_projects,heading:"Popular"} %>
      <%= render partial:'popular_in_country',locals:{popular_in_country: @popular_in_country} %>
    <%end%>
  </div>

</section>

