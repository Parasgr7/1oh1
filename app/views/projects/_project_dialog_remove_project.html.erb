<!-- Modal -->
<div class="modal fade" id="removeProjectDialog" tabindex="-1" role="dialog" aria-hidden="true">
  <div class="modal-dialog modal-dialog-centered" role="document">
    <div class="modal-content p-4 small-size">
      <div class="modal-body">
      	<h1 class="c-black ff-os fsz-24 font-weight-bold">Delete Project</h1>
      	<p class="c-black ff-ssp fsz-14 font-weight-bolder">Are you sure that you want to delete this project?</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-link" data-dismiss="modal">Cancel</button>
        <button type="button" class="btn btn-success">
          <%= link_to "Continue",project_path(id: project.id), method: :delete %>
        </button>
      </div>
    </div>
  </div>
</div>
